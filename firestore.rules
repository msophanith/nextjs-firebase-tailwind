rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // 1. Contributions (Public for now)
    match /contributions/{id} {
      allow read, write: if true;
    }

    // 2. Products (Public for now)
    match /products/{id} {
      allow read, write: if true;
    }

    // 3. Posts (Public read, restricted create)
    match /posts/{post} {
      allow read: if true;
      allow create: if request.resource.data.keys().hasAll(['imageData', 'location', 'createdAt'])
                   && request.resource.data.imageData is string
                   && request.resource.data.location is map
                   && request.resource.data.createdAt == request.time;
      allow update, delete: if false;
    }

    // 4. Default Deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
